<%- include("./partials/header") -%>

<div
	class="modal modal-sheet position-static d-block bg-body-secondary p-4 py-md-5"
	tabindex="-1"
	role="dialog"
	id="modalSheet">
	<div class="modal-dialog" role="document">
		<div class="modal-content rounded-4 shadow">
			<div class="modal-header border-bottom-0">
				<h1 class="modal-title fs-5">Riddle Game</h1>
			</div>
			<div class="modal-body py-0">
				<h1>Question</h1>	
				<p><%= response.riddle %></p>
				<p id="answer" style="display: none">
					<strong><em>Answer: <%= response.answer %></em></strong>
				</p>
			</div>
			<div
				class="modal-footer flex-column align-items-stretch w-100 gap-2 pb-3 border-top-0">
				<button id="revealButton" type="button" class="btn btn-lg btn-primary">
					Reveal answer
				</button>
			</div>
		</div>
	</div>
</div>

<%- include("./partials/footer") -%>
